<h1>Advanced search</h1>

<%= form_for @search, html: {class: "pure-form"} do |s| %>

	<div class="field">
		<%= s.label :keywords %></br>
		<%= s.text_field :keywords %>
	</div>

	<div class="field">
		<%= s.label :category %></br>
		<%= s.select :category, options_for_select(@categories), :include_blank => true %>
	</div>

	<div class="field">
		<%= s.label :min_price, "Min price" %> - <%= s.text_field :min_price, size: 10 %></br>
		<%= s.label :max_price, "Max price" %> - <%= s.text_field :max_price, size: 10 %>
	</div>

	<div class="field">
		<%= s.label :isbn, "ISBN" %><%= s.text_field :isbn, size: 10 %>
	</div>

	<div class="actions"><%= s.submit "Search", class: "pure-button pure-button-primary" %></div>

<% end %> 

<p><%= link_to "Back", books_path %></p>